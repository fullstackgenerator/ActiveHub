@model ActiveHub.Models.Login

@{
    ViewData["Title"] = "Login - ActiveHub";
}

<section class="section">
    <div class="container">
        <div class="program-container mb-5">
            <div class="row g-4 justify-content-center">
                <div class="col-md-6">
                    <h2 class="text-center mb-4">Log In to Your Account</h2>
                    <form asp-controller="Account" asp-action="Login" asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post" class="mt-4">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control" type="email" placeholder="Your email address" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label"></label>
                            <input asp-for="Password" class="form-control" type="password" placeholder="Your password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="mb-3 form-check">
                            <input asp-for="RememberMe" class="form-check-input" />
                            <label asp-for="RememberMe" class="form-check-label"></label>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">Log In</button>
                        </div>
                        <p class="text-center mt-3">
                            Don't have an account? <a asp-controller="Register" asp-action="Index">Sign Up Now</a>
                        </p>
                        @* <p class="text-center mt-2">
                            <a asp-controller="Account" asp-action="ForgotPassword">Forgot your password?</a>
                        </p> *@
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>