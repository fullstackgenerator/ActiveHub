@{
    ViewData["Title"] = "Our Programs - FitPro";
}

<section class="section program-hero">
    <div class="container">
        <h1 class="section-title">Find your perfect fitness program</h1>
        <p class="section-subtitle">Explore our specialized training programs designed to help you reach your goals, whatever they may be.</p>
    </div>
</section>

<section class="section program-details">
    <div class="container">
        <!-- Strength Training Program -->
        <div class="program-container mb-5">
            <div class="row g-4 align-items-center">
                <div class="col-md-6">
                    <img src="https://cdn.pixabay.com/photo/2017/08/07/14/02/man-2604149_1280.jpg" alt="Strength Training" class="img-fluid rounded shadow">
                </div>
                <div class="col-md-6">
                    <h2 class="program-name">Strength Training</h2>
                    <div class="program-meta mb-3">
                        <span class="badge bg-primary me-2">12 Weeks</span>
                        <span class="badge bg-success">199€</span>
                    </div>
                    <div class="program-description">
                        <p>Our Strength Training program is designed to help you build lean muscle mass, increase strength, and improve overall body composition. This 12-week progressive program is suitable for all levels, from beginners to advanced lifters.</p>
                        
                        <h5 class="mt-4">Program Highlights:</h5>
                        <ul class="program-features">
                            <li><i class="fas fa-dumbbell me-2 text-primary"></i>3-5 customized workouts per week</li>
                            <li><i class="fas fa-chart-line me-2 text-primary"></i>Progressive overload techniques</li>
                            <li><i class="fas fa-utensils me-2 text-primary"></i>Nutrition guidelines for muscle gain</li>
                            <li><i class="fas fa-user-tie me-2 text-primary"></i>Weekly check-ins with your coach</li>
                            <li><i class="fas fa-file-alt me-2 text-primary"></i>Detailed workout tracking system</li>
                        </ul>
                        
                        <div class="program-results mt-4">
                            <h5>Expected Results:</h5>
                            <div class="progress mt-2 mb-2">
                                <div class="progress-bar bg-danger" role="progressbar" style="width: 85%" aria-valuenow="85" aria-valuemin="0" aria-valuemax="100">Strength Increase 85%</div>
                            </div>
                            <div class="progress mb-2">
                                <div class="progress-bar bg-warning" role="progressbar" style="width: 70%" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100">Muscle Growth 70%</div>
                            </div>
                            <div class="progress">
                                <div class="progress-bar bg-success" role="progressbar" style="width: 60%" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100">Fat Loss 60%</div>
                            </div>
                        </div>
                    </div>
                    <a sp-controller="Register" asp-action="Index" class="btn btn-primary mt-3">Enroll Now</a>
                </div>
            </div>
        </div>
        
        <!-- HIIT Workouts Program -->
        <div class="program-container mb-5">
            <div class="row g-4 align-items-center">
                <div class="col-md-6 order-md-2">
                    <img src="https://cdn.pixabay.com/photo/2018/04/05/17/21/kettlebell-3293475_1280.jpg" alt="HIIT Workouts" class="img-fluid rounded shadow">
                </div>
                <div class="col-md-6 order-md-1">
                    <h2 class="program-name">HIIT Workouts</h2>
                    <div class="program-meta mb-3">
                        <span class="badge bg-primary me-2">8 Weeks</span>
                        <span class="badge bg-success">149€</span>
                    </div>
                    <div class="program-description">
                        <p>Our High-Intensity Interval Training (HIIT) program is designed to maximize fat burning and cardiovascular health in minimal time. This 8-week program combines short bursts of intense exercise with recovery periods to boost metabolism and endurance.</p>
                        
                        <h5 class="mt-4">Program Highlights:</h5>
                        <ul class="program-features">
                            <li><i class="fas fa-bolt me-2 text-primary"></i>4-5 intense workouts per week (20-30 mins each)</li>
                            <li><i class="fas fa-fire me-2 text-primary"></i>Afterburn effect for continued calorie burn</li>
                            <li><i class="fas fa-heartbeat me-2 text-primary"></i>Cardiovascular endurance improvement</li>
                            <li><i class="fas fa-stopwatch me-2 text-primary"></i>Time-efficient workouts</li>
                            <li><i class="fas fa-home me-2 text-primary"></i>No equipment needed options</li>
                        </ul>
                        
                        <div class="program-results mt-4">
                            <h5>Expected Results:</h5>
                            <div class="progress mt-2 mb-2">
                                <div class="progress-bar bg-danger" role="progressbar" style="width: 90%" aria-valuenow="90" aria-valuemin="0" aria-valuemax="100">Fat Loss 90%</div>
                            </div>
                            <div class="progress mb-2">
                                <div class="progress-bar bg-info" role="progressbar" style="width: 80%" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100">Endurance 80%</div>
                            </div>
                            <div class="progress">
                                <div class="progress-bar bg-warning" role="progressbar" style="width: 40%" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100">Muscle Growth 40%</div>
                            </div>
                        </div>
                    </div>
                    <a href="/register" class="btn btn-primary mt-3">Enroll Now</a>
                </div>
            </div>
        </div>
        
        <!-- Flexibility & Balance Program -->
        <div class="program-container mb-5">
            <div class="row g-4 align-items-center">
                <div class="col-md-6">
