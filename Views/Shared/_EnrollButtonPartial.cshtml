@model ActiveHub.Models.MembershipType

@if (User.Identity.IsAuthenticated)
{
    <form asp-controller="Pricing" asp-action="InitiatePurchase" method="post" class="mt-3">
        @Html.AntiForgeryToken()
        <input type="hidden" name="membershipTypeId" value="@Model.Id" />
        <button type="submit" class="btn btn-primary w-100">
            @if (Model.Category == ActiveHub.Models.MembershipCategory.Special)
            {
                <span>Enroll Now</span>
            }
            else
            {
                <span>Choose Plan</span>
            }
        </button>
    </form>
}
else
{
    <a asp-controller="Account" asp-action="Login" asp-route-returnUrl="/program" class="btn btn-primary mt-3 w-100">Login to Enroll</a>
}