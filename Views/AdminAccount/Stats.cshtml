@model ActiveHub.Models.AdminDashboard

@{
ViewData["Title"] = "Stats and Data Overview";
Layout = "_DashboardLayoutAdmin";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Stats and Data Overview</h1>
</div>

<form class="row g-3 align-items-end mb-4" method="get" id="filterForm">
    <div class="col-md-3">
        <label class="form-label">From</label>
        <input class="form-control datepicker" type="text" name="fromDate"
               value="@ViewData["fromDate"]"/>
    </div>
    <div class="col-md-3">
        <label class="form-label">To</label>
        <input class="form-control datepicker" type="text" name="toDate"
               value="@ViewData["toDate"]"/>
    </div>
    <div class="col-md-auto">
        <button class="btn btn-outline-success" type="submit">
            <i class="bi bi-funnel me-1"></i>Filter
        </button>
        <button class="btn btn-outline-secondary" type="button" id="btnClearFilter">
            <i class="bi bi-x-circle me-1"></i>Clear
        </button>
    </div>
</form>

<div class="row">
    <div class="col-lg-6 mb-4">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">New Users Over Time</h6>
            </div>
        </div>
    </div>

    <div class="col-lg-6 mb-4">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Programs Used</h6>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12 mb-4">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Total Income</h6>
            </div>
        </div>
    </div>
</div>